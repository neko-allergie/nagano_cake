<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @genre %>
  <div class='row'>
    <div class='col-md-10 offset-md-1'>
      <li class="list-group-item list-group-item-secondary">ジャンル一覧・追加</li>

      <%= render 'form', genre: @genre %>

    <table class='table table-hover table-inverse'>
    <thead>
      <tr>
      <th></th>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
    <tr>
    <td>
      <%= genre.name %>
    </td>
    <td>
      <%= link_to '編集' , edit_admin_genre_path(genre), class: "btn btn-sm" %>
    </td>
    </tr>
    <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>