<p>会員一覧</p>

<table class='table table-hover table-inverse'>
<thead>
  <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th colspan="2"></th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
</thead>
 <tbody>
  <% @customers.each do |customer| %>
  <tr>
    <td>
      <%= customer.id %>
    </td>
    <td>
      <%= link_to admin_customer_path(customer) do %>
        <%= customer.full_name %>
      <% end %>
    </td>
    <td colspan="2"></td>
    <td>
      <%= customer.email %>
    </td>
    <td>
      ステータス
    </td>
  </tr>
  <% end %>
</tbody>


</table>