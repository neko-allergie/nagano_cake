<div class="container mt-5 mb-5">
  <h2>会員一覧</h2>

  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th colspan="2"></th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
   <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td>
        <%= customer.id %>
      </td>
      <td>
        <%= link_to admin_customer_path(customer) do %>
          <%= customer.full_name %>
        <% end %>
      </td>
      <td colspan="2"></td>
      <td>
        <%= customer.email %>
      </td>
      <td>
        <% if customer.is_deleted == false %>
          <p>有効</p>
        <% else %>
          <p>退会</p>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>