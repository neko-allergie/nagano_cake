    <%= form_with model: [:admin, customer], local:true do |f| %>

    <tr>
      <th>会員ID</th>
      <td><%= customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :last_name, class: 'form-control' %><%= f.text_field :first_name, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_kana, class: 'form-control' %><%= f.text_field :first_kana, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postcode, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email, class: 'form-control' %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>&emsp;
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
      </td>
    </tr>


    <div class= "form-group">
     <%= f.submit class: 'btn btn-success' %>
    </div>

  <% end %>