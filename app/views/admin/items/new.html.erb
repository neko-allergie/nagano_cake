<h2>商品新規登録</h2>


<%= form_with model: @item, url: admin_items_path do |f| %>
  <div>
    <%= f.label "商品画像" %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.label "商品名" %>
    <%= f.text_field :name, placeholder:"商品名" %>
  </div>

  <div>
    <%= f.label "商品説明" %>
    <%= f.text_area :introduction, placeholder:"商品説明" %>
  </div>

  <div>
    <%= f.label "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt:"--選択して下さい--"} %>
  </div>

  <div>
    <%= f.label "税抜価格" %>
    <%= f.text_field :without_tax, placeholder:"1000" %>円
  </div>

  <div>
    <%= f.label "販売ステータス" %>
     <%= f.label "販売中" %>
   　<%= f.radio_button :sale_status, 0 %>
     <%= f.label "販売停止中" %>
   　<%= f.radio_button :sale_status, 1 %>
  </div>

  <div>
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>