<div class="container">
    <%#= render 'genre', genres: @genres %>
  <div class="mb-8 text-center">
    <span class="text-3xl font-bold">
      商品一覧
    </span>
  </div>
  <div class='flex flex-wrap justify-center'>
    <% @items.each do |item| %>
      <div class="w-full max-w-sm rounded-lg xl:w-4/12 md:w-6/12">
        <%= link_to item_path(item) do %>
          <%= image_tag item.image, class: "p-5 object-cover" %>
          <div class="px-5 pb-5">
            <p class="text-3xl font-semibold tracking-tight text-gray-900 mb-4"><%= item.name %></p>
            <div class="flex justify-between items-center">
              <span class="text-3xl font-bold text-gray-900"><%= number_to_currency(item.price, unit: "¥", strip_insignificant_zeros: true) %></span>
              <% if item.stock > 0 %>
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold p-2 rounded">In stock</span>
              <% else %>
                <span class="bg-red-100 text-red-800 text-xs font-semibold p-2 rounded">Out of stock</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @items %>