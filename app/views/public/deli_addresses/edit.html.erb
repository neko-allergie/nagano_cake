<%= form_with model: @deli_address, url: public_deli_address_path do |f| %>
<!--editボタンを押したら、updateへ行くようにする-->
    <table>
      <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postcode, class: 'form-control' %></td>
      </tr>
      <tr>
      <th>住所</th>
      <td><%= f.text_field :address, class: 'form-control' %></td>
      </tr>
      <tr>
      <th>宛名</th>
      <td><%= f.text_field :name, class: 'form-control' %></td>
      </tr>
    </table>
    <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
<% end %>