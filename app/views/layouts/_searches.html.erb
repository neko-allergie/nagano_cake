<div class="search_form pe-3">
  <%= search_form_for @q, url: search_path, class:"row justify-content-center" do |f| %>
  <div class="col-md-3 p-0">
    <%= f.search_field :name_cont, class:"form-control", placeholder:"商品名検索", style: "width:200px; height: 45px;" %>
  </div>
  <div class="col-md-1 offset-md-6">
    <button class="btn btn-outline-success" type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </div>
</div>
<% end %>